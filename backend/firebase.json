{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": [
    {
      "target": "api",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    },
    {
      "target": "cdn",
      "public": "public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "trailingSlash": false,
      "rewrites": [
        {
          "source": "**",
          "function": "serveImage"
        }
      ]
    }
  ]
}
